
<style>
  body{
    background: linear-gradient(
      rgba(0,0,0,0.7),
      rgba(0,0,0,0.7)
    ), 
    url("/bg.jpg") no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  h2{
    color: white;
  }
  .container-index {
    margin-right: 15%;
    margin-left: 15%;
    font-weight: bold;
  }
  .text{
    color: white;
    font-weight: 300;
  }
  .footer-links {
    text-align: center;
    color: white;
    margin-top: 30%;
    font-size: 75%;
  }
  .panel-transparent {
        background: none;
    }

    .panel-transparent .panel-heading{
        background: rgba(122, 130, 136, 0.2)!important;
    }

    .panel-transparent .panel-body{
        background: rgba(46, 51, 56, 0.5)!important;
    }
</style>

<div class="container-index row">
  <div class="col-sm-12" style="text-align:center">
    <div class="panel panel-default panel-transparent">
      <div class="panel-body">
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "text"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field">
            <%= f.label :password, class: "text" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "text"%>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "Log in",class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    
  <div class="col-sm-12">
    <p class="footer-links">This site is for educational purpose only. Contact creator at quangwdang@gmail.com for more information.</p>
  </div>
</div>
 


