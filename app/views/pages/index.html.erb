<% if !user_signed_in? %>
  <style>
    body{
      background: linear-gradient(
        rgba(0,0,0,0.7),
        rgba(0,0,0,0.7)
      ), 
      url("/bg.jpg") no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    h1{
      color: white;
    }
    .container-index {
      margin-right: 15%;
      margin-left: 15%;
      font-weight: bold;
    }
    .text{
      color: white;
      font-weight: 300;
    }
    .footer-links {
      text-align: center;
      color: white;
      margin-top: 30%;
      font-size: 75%;
    }
    .log-in{
      float: right;
      width:300px;
      height:150px;
    }
    .sign-up{
      float: right;
      width:300px;
      height:250px;
    }
  </style>
  
  <div class="container-index row">
    <div class="col-sm-12" style="text-align:center">
      <h1>Welcome to Quakr.</h1>
      <p class="text">
      Quak! Quak! <br>
      Share your babbles! <br>
      Just like a blog, but with less characters!
      </p>
    </div>
    <div class="col-sm-12" style="text-align:center">
      <%= link_to(new_user_registration_path) do %>
      <button type="button" class="btn btn-primary btn-lg">Sign up</button>
      <% end %>
    </div>
    <br>
    <div class="col-sm-12" style="text-align:center;margin-top:10px">
      <%= link_to(new_user_session_path) do %>
      <button type="button" class="btn btn-info btn-lg">Sign in</button>
      <% end %>
    </div>
    <div class="col-sm-12">
      <p class="footer-links">This site is for educational purpose only. Contact creator at quangwdang@gmail.com for more information.</p>
    </div>
  </div>
  
 

<% else %>
  <script>document.location = "/home"</script>
<% end %>